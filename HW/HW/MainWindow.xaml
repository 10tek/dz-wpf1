<Window x:Class="HW.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HW"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl x:Name="tabControl">
            <TabItem x:Name="firstTabItem" Header="Главная страница">
                <StackPanel x:Name="tabSP" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Label Content="Введите URL адрес:"></Label>
                    <TextBox Height="50" Width="300" FontSize="20" x:Name="urlTB" TextAlignment="Left" Text="https://www." Background="AliceBlue" VerticalAlignment="Center" HorizontalContentAlignment="Center"/>
                    <Button Height="30" x:Name="searchBtn" Click="SearchBtnClick" Content="Поиск"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>

</Window>
